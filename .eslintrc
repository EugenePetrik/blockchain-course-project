{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true,
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
  },
  "rules": {
    "prettier/prettier": "error",
    "semi": ["error", "always"],
    "quotes": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-useless-concat": "off",
    "no-console": "off",
    "no-restricted-syntax": "off",
    "no-unused-vars": "off",
    "import/prefer-default-export": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
  },
}
