{
  "exclude": [ "./node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "target": "esNext",
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "typeRoots": [ "./types", "./node_modules/@types"],
  }
}